        }
    }, [isActive]);

    const touchStart = useRef(0);
    const touchEnd = useRef(0);
    const isDragging = useRef(false);

    const handlePointerDown = (e: React.PointerEvent) => {
        // Ignore if clicking a button or interactive element
        if ((e.target as HTMLElement).closest('button, a, input, textarea, [role="button"]')) {
            console.log('üö´ Pointer Down ignored (interactive element)');
            return;
        }

        console.log('üëá Pointer Down at:', e.clientX);
        isDragging.current = true;
        touchStart.current = e.clientX;
        touchEnd.current = e.clientX; // Initialize to start position
    };

    const handlePointerMove = (e: React.PointerEvent) => {
        if (isDragging.current) {
            touchEnd.current = e.clientX;
            console.log('üëâ Moving to:', e.clientX);
        }
    };

    const handlePointerUp = (e: React.PointerEvent) => {
        console.log('üëÜ Pointer Up');
        if (!isDragging.current) {
            console.log('‚ö†Ô∏è Not dragging, ignoring');
            return;
        }

        isDragging.current = false;

        const start = touchStart.current;
        const end = touchEnd.current;
        const distance = start - end;

        console.log('üìä Start:', start, 'End:', end, 'Distance:', distance);

        const isSwipe = Math.abs(distance) > 50;

        if (isSwipe) {
            console.log('‚úÖ SWIPE DETECTED! Opening profile...');
            onOpenProfile(dish.restaurant);
