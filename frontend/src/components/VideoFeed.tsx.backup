            console.log('‚ùå Not a swipe (distance:', Math.abs(distance), '< 50)');
        }

        // Reset
        touchStart.current = 0;
        touchEnd.current = 0;
    };

    const handleShare = () => {
        navigator.clipboard.writeText(`Check out this amazing dish: ${dish.name} at ${dish.restaurant.name}`);
        alert('Link copied to clipboard!');
    };

    const handleAddComment = (e: React.FormEvent) => {
        e.preventDefault();
        if (commentText.trim()) {
            setComments([...comments, { user: 'You', text: commentText }]);
            setCommentText('');
        }
    };

